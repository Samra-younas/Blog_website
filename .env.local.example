# Copy this file to .env.local and fill in your values.

# MongoDB (required for app and seed)
MONGODB_URI=

# JWT secret for admin auth (use a long random string in production)
JWT_SECRET=

# Seed script: create one admin user (run: npm run seed)
ADMIN_EMAIL=
ADMIN_PASSWORD=

# Cloudinary (required for image uploads in admin)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Public site URL (used for sitemap, robots, canonical, OG; set to your Vercel URL or custom domain)
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# Optional: used by some server fetches when NEXT_PUBLIC_SITE_URL is not set (e.g. local dev)
